<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:Context = ".Home"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/ProfileParent"
    android:background="@color/white">


        <RelativeLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bground"
            android:backgroundTint="@color/white"

           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ac_shop"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/border_one"
                    android:backgroundTint="#f5f5f5"
                    android:elevation="2dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/rounded_borders"
                        android:backgroundTint="#4c9a2a"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/shop_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shop_txt_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:textColor="#4c9a2a"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/eye_icon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/eye_icon"/>

                            <TextView
                                android:id="@+id/shop_txt_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="867 view"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:textColor="#b5d5a7"
                                android:textSize="13dp">

                            </TextView>

                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>







            <!--    bottom-->


        </RelativeLayout>



    <LinearLayout
        android:id="@+id/as_amb"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/border_one"
        android:elevation="2dp"
        android:backgroundTint="#f5f5f5">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_borders"
            android:gravity="center"
            android:backgroundTint="#4c9a2a">

            <ImageView
                android:id="@+id/ambulance_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ambulance"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ambulance_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp"

                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

            </TextView>
            <TextView
                android:id="@+id/ambulance_txt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#4c9a2a"
                android:textSize="13dp"

                android:layout_marginStart="20dp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="2"

                android:orientation="horizontal">
                <Button
                    android:id="@+id/tn_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text=""
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_one"
                    android:textAllCaps="false"
                    android:backgroundTint="#4c9a2a"/>
                <Button
                    android:id="@+id/call_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_one"
                    android:textAllCaps="false"
                    android:backgroundTint="#4c9a2a"/>
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_market"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/border_one"
        android:elevation="2dp"
        android:backgroundTint="#f5f5f5">



        <ImageView
            android:id="@+id/veg_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/veg"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/veg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetables"
                android:textColor="#4c9a2a"
                android:textSize="15dp"
                android:textStyle="bold"

                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/grey"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/eye_grey"/>

                <TextView
                    android:id="@+id/veg_txt_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="867 views"
                    android:textColor="#808080"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:textSize="13dp"

                    >

                </TextView>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>





    <LinearLayout
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/border_one"
        android:elevation="2dp"
        android:backgroundTint="#4c9a2a">


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_borders"
            android:gravity="center"
            android:backgroundTint="@color/white">

            <ImageView
                android:id="@+id/bus_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bus_green"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bus_txt_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp">

            </TextView>
            <TextView
                android:id="@+id/bus_txt_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginStart="15dp">

            </TextView>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/govtt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_one"
            android:backgroundTint="#f5f5f5"
            android:elevation="2dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_borders"
                android:backgroundTint="#4c9a2a"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/government_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/police" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/government_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Govt"
                    android:textColor="#4c9a2a"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>






</LinearLayout>




