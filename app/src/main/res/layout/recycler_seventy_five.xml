<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".CarrierClass.Carrier_Fragment">




        <TextView
            android:id="@+id/carrier_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Carrier AC"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:text="Starting from : 15,000/-"
            android:textColor="#4c9a2a"
            android:textSize="13dp"/>

        <ImageView
            android:id="@+id/big_ac_img2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:src="@drawable/ac_img">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shop_img11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ac_back_one"/>

            <ImageView
                android:id="@+id/shop_img22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ac_back_two"/>

            <ImageView
                android:id="@+id/shop_img33"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ac_back_three"/>

            <ImageView
                android:id="@+id/shop_img44"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ac_back_four"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Description"
            android:textColor="#4c9a2a"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/education_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="12dp"
            android:letterSpacing="0.02"
            android:text="Karur Taluk, which was once a part of Coimbatore district, was merged with Tiruchirappalli district during 1910,Karur Taluk, which was once a part of Coimbatore district, was merged with Tiruchirappalli district during 1910"
            android:textColor="#808080"
            >

        </TextView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="Customized"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:textColor="#4c9a2a"
            android:background="@drawable/border"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:weightSum="2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Call now"
                android:textSize="13dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/rounded_borders"
                android:backgroundTint="#4c9a2a"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Enquiry"
                android:textSize="13dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/rounded_borders"
                android:backgroundTint="#4c9a2a"/>

        </LinearLayout>
    </LinearLayout>

