<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_borders"
        android:elevation="2dp"
        android:backgroundTint="#4c9a2a">



        <ImageView
            android:id="@+id/dental_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/dental"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dental_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ispum may be used as a holder\nbefore the final copy is available"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                >

                <ImageView
                    android:id="@+id/eye_img"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/eye"
                    android:layout_gravity="end"
                    android:layout_marginEnd="6dp">

                </ImageView>

                <TextView
                    android:id="@+id/numberr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:text="186"
                    android:textColor="@color/white"
                    android:textSize="12dp">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_gravity="center"
                    >

                    <Button
                        android:id="@+id/view_btn"
                        android:layout_width="65dp"
                        android:layout_height="27dp"
                        android:text="View"
                        android:textAllCaps="false"
                        android:textColor="#4c9a2a"
                        android:textSize="10dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/bg">

                    </Button>

                </LinearLayout>






            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>