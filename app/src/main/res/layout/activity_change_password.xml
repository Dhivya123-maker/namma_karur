<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/backk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24">

        </ImageView>


        <ImageView
            android:id="@+id/verification_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="90dp"
            android:src="@drawable/six"


            />

        <TextView
            android:id="@+id/verification_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verification_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Your new password must be different\nfrom previously used password."
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="15dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/verify_lnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_txt"
            android:orientation="vertical">


            <EditText
                android:id="@+id/old_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="40dp"
                android:singleLine="true"
                android:background="@drawable/rounded_borders"
                android:hint="Old password"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="14dp"
                android:textStyle="bold">

            </EditText>


            <EditText
                android:id="@+id/new_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:singleLine="true"
                android:background="@drawable/rounded_borders"
                android:hint="New password"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="14dp"
                android:textStyle="bold">

            </EditText>

            <EditText
                android:id="@+id/confirm_passs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:singleLine="true"
                android:background="@drawable/rounded_borders"
                android:hint="Confirm password"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="14dp"
                android:textStyle="bold">

            </EditText>


            <Button

                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>