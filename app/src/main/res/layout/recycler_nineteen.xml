<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ac_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_one"
            android:backgroundTint="#4c9a2a"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bk_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    >

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/bk_txt_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text=""

                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/bk_txt_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text=""
                    android:textColor="@color/white"

                    android:textSize="12dp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/time_img_nine"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/clock"/>
                    <TextView
                        android:id="@+id/time_txt_nine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.00 am - 10.00am"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/verify_img_nine"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/verified"/>
                    <TextView
                        android:id="@+id/verified_txt_nine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"/>
                    <ImageView
                        android:id="@+id/star_nine"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/starr"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        />

                    <TextView
                        android:id="@+id/nine_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="4.6"
                        android:textColor="@color/white"
                        android:textSize="12dp">

                    </TextView>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>





    </LinearLayout>


</LinearLayout>