<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:Context = ".Home"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:background="@color/white"
    >


     <RelativeLayout
        android:id="@+id/brandAndItsLocation"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="0dp"

        android:background="@drawable/profile_empty"
        android:backgroundTint="#4C9A2A"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/nammakarurenquirylogo" />

        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bground"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/brandAndItsLocation">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat feature is comming soon"
                    android:textColor="#4c9a2a"
                    android:textSize="18dp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold" />











    </RelativeLayout>


</RelativeLayout>