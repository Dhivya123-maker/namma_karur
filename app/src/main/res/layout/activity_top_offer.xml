<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProfileParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:Context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/brandAndItsLocation"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginEnd="0dp"

            android:background="@drawable/profile_empty"
            android:backgroundTint="#4C9A2A"


            >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:text="Lenskart"
                    android:textColor="@color/white"
                    android:textSize="16dp"
              />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/brandAndItsLocation"
            android:background="@drawable/bground"
            android:backgroundTint="#f5f5f5">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                tools:context=".BlankFragment.Blank_PostFragment">

            <LinearLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@drawable/mpty"
                android:backgroundTint="#f5f5f5"
                android:orientation="vertical">







                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >


                        <LinearLayout
                            android:id="@+id/full"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#f5f5f5"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/mall_first_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="180dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/brooke_mall" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="155dp"
                                    android:layout_marginEnd="13dp"
                                    android:alpha="0.50"
                                    android:background="@drawable/rounded_corners_black"
                                    android:backgroundTint="@color/black"
                                    android:gravity="center">


                                </LinearLayout>

                                <TextView
                                    android:id="@+id/brooke_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="165dp"
                                    android:text="View more >>"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    android:textStyle="bold">

                                </TextView>

                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:gravity="center"

                                >

                                <LinearLayout
                                    android:id="@+id/two_lnr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                   >




                                    <LinearLayout
                                        android:id="@+id/honda"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/round"
                                        android:backgroundTint="#4c9a2a"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="70dp"
                                            android:layout_height="75dp"
                                            android:layout_gravity="center"
                                            android:background="@drawable/border"
                                            android:layout_marginStart="10dp"
                                            android:backgroundTint="@color/white"
                                            android:gravity="center">

                                            <ImageView
                                                android:id="@+id/lens_img"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ac_one"
                                                android:layout_gravity="center">

                                            </ImageView>  </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/lens_title"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                android:text="SR air conditioners"
                                                android:textSize="14dp"
                                                android:textColor="@color/white">

                                            </TextView>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:layout_marginTop="2dp"
                                                android:text="56, Grid Street, Karur\nsenguntha puram 5th cross,\nkarur "
                                                android:textSize="11dp"

                                                android:textColor="@color/white">

                                            </TextView>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="vertical">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="10dp"
                                                    android:orientation="horizontal">



                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="4.6"
                                                        android:textSize="10dp"

                                                        android:textColor="@color/white">

                                                    </TextView>

                                                    <ImageView
                                                        android:layout_width="10dp"
                                                        android:layout_height="10dp"
                                                        android:src="@drawable/starr"
                                                        android:layout_gravity="center"
                                                        android:layout_marginStart="5dp"
                                                        />
                                                    <ImageView
                                                        android:layout_width="10dp"
                                                        android:layout_height="10dp"
                                                        android:src="@drawable/starr"
                                                        android:layout_gravity="center"
                                                        android:layout_marginStart="5dp"
                                                        />
                                                    <ImageView
                                                        android:layout_width="10dp"
                                                        android:layout_height="10dp"
                                                        android:src="@drawable/starr"
                                                        android:layout_gravity="center"
                                                        android:layout_marginStart="5dp"
                                                        />
                                                    <ImageView
                                                        android:layout_width="10dp"
                                                        android:layout_height="10dp"
                                                        android:src="@drawable/starr"
                                                        android:layout_gravity="center"
                                                        android:layout_marginStart="5dp"
                                                        />
                                                    <ImageView
                                                        android:layout_width="10dp"
                                                        android:layout_height="10dp"
                                                        android:src="@drawable/starr"
                                                        android:layout_gravity="center"
                                                        android:layout_marginStart="5dp"
                                                        />





                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="10dp"
                                                    android:layout_marginTop="5dp"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:id="@+id/verify_img"
                                                        android:layout_width="15dp"
                                                        android:layout_height="15dp"
                                                        android:layout_gravity="center"
                                                        android:src="@drawable/verified" />
                                                    <TextView
                                                        android:id="@+id/lens_verified"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Verified"
                                                        android:textStyle="bold"
                                                        android:layout_marginStart="5dp"
                                                        android:textColor="@color/white"
                                                        android:textSize="10dp"/>



<!--                                                    <ImageView-->
<!--                                                        android:layout_width="12dp"-->
<!--                                                        android:layout_height="12dp"-->
<!--                                                        android:src="@drawable/eye"-->
<!--                                                        android:layout_marginTop="1dp"-->
<!--                                                        android:layout_gravity="center"-->
<!--                                                        android:layout_marginStart="10dp">-->

<!--                                                    </ImageView>-->
<!--                                                    <TextView-->
<!--                                                        android:layout_width="wrap_content"-->
<!--                                                        android:layout_height="wrap_content"-->
<!--                                                        android:text="186"-->
<!--                                                        android:layout_marginTop="1dp"-->
<!--                                                        android:layout_marginEnd="10dp"-->
<!--                                                        android:layout_gravity="center"-->
<!--                                                        android:textSize="10dp"-->
<!--                                                        android:layout_marginStart="2dp"-->
<!--                                                        android:textColor="@color/white">-->

<!--                                                    </TextView>-->








                                                </LinearLayout>


                                            </LinearLayout>





                                        </LinearLayout>




                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingHorizontal="12dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/round"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:backgroundTint="#4c9a2a"
                                        android:orientation="vertical"
                                        android:layout_gravity="center"
                                        android:gravity="center"

                                        >

                                        <TextView
                                            android:id="@+id/lens_start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="9:30 AM"
                                            android:textSize="10dp"
                                            android:layout_marginTop="10dp"
                                            android:textColor="@color/white"
                                          >

                                        </TextView>

                                        <TextView
                                            android:id="@+id/lens_end"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="8:00 PM"
                                            android:textSize="10dp"
                                            android:layout_marginTop="5dp"
                                            android:textColor="@color/white"
                                          >

                                        </TextView>




                                            <com.kyleduo.switchbutton.SwitchButton
                                                android:id="@+id/sb_text"
                                                style="@style/SwitchButtonStyle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#4c9a2a"
                                                android:textSize="12dp"
                                                android:padding="4dp"
                                                android:layout_marginTop="5dp"
                                                app:kswTextAdjust="-2dp"
                                                android:layout_marginBottom="5dp"
                                                app:kswTextExtra="8dp"
                                                android:letterSpacing="0.01"
                                                app:kswTextOff="close"
                                                android:enabled="false"
                                                app:kswThumbColor="#4c9a2a"
                                                app:kswBackColor="@color/white"
                                                app:kswTextOn="open"

                                                />





                                    </LinearLayout>



                                </LinearLayout>

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:text="Description"
                                android:textColor="#4c9a2a"
                                android:textStyle="bold">

                            </TextView>
                            <TextView
                                android:id="@+id/lens_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="12dp"
                                android:letterSpacing="0.02"
                                android:text="Karur Taluk, which was once a part of Coimbatore district, was merged with Tiruchirappalli district during 1910"
                                android:textColor="@color/black"
                                >

                            </TextView>






                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginBottom="100dp"
                                android:weightSum="2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg"
                                    android:elevation="2dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#4c9a2a"
                                    android:orientation="horizontal"
                                    >


                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/eye"/>

                                    <TextView
                                        android:id="@+id/view_cnt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:layout_marginStart="5dp"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg"
                                    android:elevation="2dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="#4c9a2a"
                                    android:orientation="horizontal"
                                    >


                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/share"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Share"
                                        android:layout_marginStart="5dp"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white">

                                    </TextView>

                                </LinearLayout>





                            </LinearLayout>




                        </LinearLayout>

                    </FrameLayout>


            </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_shops"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#4c9a2a"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:menu="@menu/bottom_nav" />


</androidx.constraintlayout.widget.ConstraintLayout>




