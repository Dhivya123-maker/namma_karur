                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Experience : 2years"
                              android:textColor="@color/black"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Position : Android developer"
                              android:textColor="@color/black"/>

                      </LinearLayout>



                      <LinearLayout
