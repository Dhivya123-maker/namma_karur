                            android:orientation="horizontal"
                            android:gravity="end">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/edits"/>

                        </LinearLayout>

                    </LinearLayout>
                <View
