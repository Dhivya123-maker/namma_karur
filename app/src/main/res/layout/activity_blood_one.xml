<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:Context = ".Home"
    android:fitsSystemWindows="true"
    android:id="@+id/ProfileParent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/brandAndItsLocations"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginEnd="0dp"

            android:background="@drawable/profile_empty"
            android:backgroundTint="#4C9A2A"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/nk">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:text="Blood Request"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bground"
            android:backgroundTint="#4C9A2A"
            android:layout_below="@+id/brandAndItsLocations">


            <LinearLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:layout_marginTop="0dp"

                android:background="@drawable/mpty">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#f5f5f5">





                        <EditText
                            android:id="@+id/edit1"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:hint="Patient name"
                            android:textColorHint="#656565"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:textSize="14dp"
                            android:background="@drawable/border_two">

                        </EditText>
                        <EditText
                            android:id="@+id/edit2"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:hint="Blood Group"
                            android:singleLine="true"
                            android:textColorHint="#656565"
                            android:textSize="14dp"
                            android:padding="10dp"
                            android:background="@drawable/border_two">

                        </EditText>


                        <EditText
                            android:id="@+id/edit3"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:hint="Problem"
                            android:singleLine="true"
                            android:textColorHint="#656565"
                            android:padding="10dp"
                            android:textSize="14dp"
                            android:background="@drawable/border_two">

                        </EditText>


                        <EditText
                            android:id="@+id/edit4"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:hint="Needed within"
                            android:textColorHint="#656565"
                            android:padding="10dp"
                            android:background="@drawable/border_two">

                        </EditText>


                        <EditText
                            android:id="@+id/edit5"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:singleLine="true"
                            android:textSize="14dp"
                            android:hint="No.of.units"
                            android:textColorHint="#656565"
                            android:padding="10dp"
                            android:background="@drawable/border_two">

                        </EditText>


                        <EditText
                            android:id="@+id/edit6"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:hint="Hospital"
                            android:singleLine="true"
                            android:textColorHint="#656565"
                            android:textSize="14dp"
                            android:padding="10dp"
                            android:background="@drawable/border_two">

                        </EditText>

                        <EditText
                            android:id="@+id/edit7"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:hint="address"
                            android:textColorHint="#656565"
                            android:singleLine="true"
                            android:textSize="14dp"
                            android:padding="10dp"
                            android:background="@drawable/border_two">

                        </EditText>


                        <EditText
                            android:id="@+id/edit8"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:hint="Contact number"
                            android:textColorHint="#656565"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:inputType="number"
                            android:background="@drawable/border_two">

                        </EditText>


                        <EditText
                            android:id="@+id/edit9"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:hint="Alternate Contact number"
                            android:textColorHint="#656565"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:padding="10dp"
                            android:background="@drawable/border_two">

                        </EditText>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="140dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/sub_btn"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/bg"
                                android:text="Submit"
                                android:layout_marginStart="60dp"
                                android:layout_marginEnd="60dp"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:textSize="16dp"

                                android:backgroundTint="#4c9a2a"/>

                        </LinearLayout>











                    </LinearLayout>


                </ScrollView>


            </LinearLayout>








            <!--    bottom-->


        </RelativeLayout>
    </RelativeLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_layout"

        tools:ignore="MissingConstraints">

    </FrameLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_shops"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemIconTint="@color/white"
        android:background="#4c9a2a"
        app:layout_constraintStart_toEndOf="parent"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav" />





</androidx.constraintlayout.widget.ConstraintLayout>




