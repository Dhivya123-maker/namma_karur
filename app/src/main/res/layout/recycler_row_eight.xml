<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProfileParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ngo"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/border_one"
        android:backgroundTint="#4C9A2A"
        android:padding="10dp"
        android:elevation="2dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_borders"
            android:backgroundTint="#F5F5F5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/arpe_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arpe_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14dp"
              >

            </TextView>

            <TextView
                android:id="@+id/arpe_txt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white"

                android:textSize="13dp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/scooter"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="#eeeeee">

                        <ImageView
                            android:id="@+id/loc_image"
                            android:layout_width="13dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/job_three">

                        </ImageView>


                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/website"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="#eeeeee">

                        <ImageView
                            android:id="@+id/we_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/website_green">

                        </ImageView>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="#eeeeee">

                        <ImageView
                            android:id="@+id/mail_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/mail_green">

                        </ImageView>


                    </RelativeLayout>





                </LinearLayout>


                <LinearLayout
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="#eeeeee">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/sharee">

                        </ImageView>


                    </RelativeLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>





</LinearLayout>