<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/border_one"
        android:elevation="2dp"
        android:backgroundTint="#4c9a2a">



        <ImageView
            android:id="@+id/blog_one_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/food_four"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/blog_one_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ispum may be used as a holder\nbefore the final copy is available"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp">

            </TextView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                >


                <TextView
                    android:id="@+id/blog_two_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read more"
                    android:textSize="12dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/white">

                </TextView>







            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
</LinearLayout>