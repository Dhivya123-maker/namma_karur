<?xml version="1.0" encoding="utf-8" ?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/back_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24">

        </ImageView>

        <TextView
            android:id="@+id/verification_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="OTP Verification"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/verification_img"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_below="@id/verification_otp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/seven"


            />

        <TextView
            android:id="@+id/verification_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verification_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Please Enter The 4 Digit Code Sent To"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verification_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="+91 8056553064"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="15dp"
            android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:weightSum="4"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/verification_txt">



        <EditText
            android:id="@+id/et_otp1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:hint=""
            android:layout_weight="1"
            android:textSize="14dp"
            android:maxLines="1"
            android:maxLength="1"

            android:imeOptions="actionNext"
            android:inputType="number"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:background="@drawable/rounded_borders"
            />


        <EditText
            android:id="@+id/et_otp2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:hint=""
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:textSize="14dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:background="@drawable/rounded_borders"
            />
        <EditText
            android:id="@+id/et_otp3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:hint=""
            android:textSize="14dp"
            android:inputType="number"
            android:maxLines="1"
            android:gravity="center"
            android:layout_weight="1"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:textColorHint="@color/black"
            android:background="@drawable/rounded_borders"
            />
        <EditText
            android:id="@+id/et_otp4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint=""
            android:textSize="14dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:layout_weight="1"
            android:imeOptions="actionGo"
            android:textColorHint="@color/black"
            android:background="@drawable/rounded_borders"
            />





    </LinearLayout>


    <LinearLayout
        android:id="@+id/verify_lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/otp">




        <TextView
            android:id="@+id/resend_otp_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend code"
            android:textColor="#4C9A2A"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginEnd="40dp"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <Button

            android:id="@+id/verify_otp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corners"
            android:text="Verify"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:letterSpacing="0.01"
            android:textStyle="bold" />

    </LinearLayout>



    </RelativeLayout>
</ScrollView>