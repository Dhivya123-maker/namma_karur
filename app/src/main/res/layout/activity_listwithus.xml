<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:Context = ".Home"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:id="@+id/ProfileParent"
    android:background="@color/white"


    android:layout_alignParentBottom="true">


    <RelativeLayout
        android:id="@+id/brandAndItsLocation"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="0dp"

        android:background="@drawable/profile_empty"
        android:backgroundTint="#4C9A2A"


        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/nammakarurenquirylogo" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="List with us"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bground"
        android:backgroundTint="#4C9A2A"
        android:layout_below="@+id/brandAndItsLocation">


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"

            android:background="@drawable/empty">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <LinearLayout
                android:id="@+id/ProfileDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <EditText


                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_two"


                    android:hint="Name"


                    android:inputType="text"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="#4c9a2a"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/buisness"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_two"
                    android:drawableBottom="#4c9a2a"
                    android:hint="Buisness Name"
                    android:inputType="number"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:textColorHint="#4c9a2a"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_two"
                    android:drawableBottom="#4c9a2a"
                    android:hint="Contact Number"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:textColorHint="#4c9a2a"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/buisness_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/border_two"
                        android:hint="Buisness type"
                        android:inputType="text"

                        android:paddingStart="15dp"

                        android:textColorHint="#4c9a2a"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="360dp"
                        android:layout_marginTop="28dp"
                        android:src="@drawable/drop_down" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/maill"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_two"
                    android:drawableBottom="#4c9a2a"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:textColorHint="#4c9a2a"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/addresss"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_two"
                    android:drawableBottom="#4c9a2a"
                    android:hint="Address"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:textColorHint="#4c9a2a"
                    android:textSize="14dp" />


                <EditText
                    android:id="@+id/msg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/border_two"
                    android:hint="Message"
                    android:inputType="text"

                    android:paddingStart="15dp"
                    android:paddingBottom="70dp"
                    android:textColorHint="#4c9a2a"
                    android:textSize="14dp" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"


                    android:layout_marginStart="110dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="110dp"
                    android:layout_marginBottom="100dp"
                    android:background="@drawable/bg"
                    android:backgroundTint="#4c9a2a"
                    android:gravity="center"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>
            </ScrollView>




            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".Listwithus">



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_layout"

                    tools:ignore="MissingConstraints">

                </FrameLayout>



                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomNavigationView_shops"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:itemIconTint="@color/white"
                    android:background="#4c9a2a"
                    app:layout_constraintStart_toEndOf="parent"
                    app:itemTextColor="@color/white"
                    app:menu="@menu/bottom_nav" />



            </androidx.constraintlayout.widget.ConstraintLayout>



        </RelativeLayout>





        <!--    bottom-->




    </RelativeLayout>


</RelativeLayout>