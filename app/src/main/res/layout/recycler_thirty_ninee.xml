<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_only"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/rounded_corners"
            android:layout_marginStart="10dp">


            <ImageView
                android:id="@+id/comment_img"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_gravity="center"

                android:src="@drawable/girl_white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/u_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp"/>


            <TextView
                android:id="@+id/g_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#4c9a2a"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:layout_marginBottom="5dp"
              >


                <TextView
                    android:id="@+id/r_ratee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.6"
                    android:layout_marginStart="10dp"
                    android:textColor="#4c9a2a"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star_s1"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_weight="1"


                        />
                    <ImageView
                        android:id="@+id/star_s2"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_weight="1"


                        />
                    <ImageView
                        android:id="@+id/star_s3"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_weight="1"


                        />
                    <ImageView
                        android:id="@+id/star_s4"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_weight="1"


                        />

                    <ImageView
                        android:id="@+id/star_s5"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_weight="1"


                        />
                </LinearLayout>


<!--                <RatingBar-->
<!--                    android:id="@+id/ratingBar1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:scaleX=".3"-->
<!--                    android:scaleY=".3"-->
<!--                    android:transformPivotX="0dp"-->
<!--                    android:transformPivotY="0dp"-->
<!--                    android:isIndicator="true"-->
<!--                    android:max="5"-->
<!--                    >-->

<!--                </RatingBar>-->


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>



</LinearLayout>
