<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ac_shop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/border_one"
        android:elevation="2dp"
        android:backgroundTint="#f5f5f5">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_borders"
            android:gravity="center"
            android:backgroundTint="#4c9a2a">

            <ImageView
                android:id="@+id/brinjal_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/veg_one"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/brinjal_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brinjal"
                android:textColor="#4c9a2a"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp">

            </TextView>
            <TextView
                android:id="@+id/brinjal_txt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 35/kg"
                android:textColor="#b5d5a7"
                android:textSize="13dp"

                android:layout_marginStart="20dp">

            </TextView>
<!--            <TextView-->
<!--                android:id="@+id/brinjal_txt_two"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Last Update Date:03.01.2021"-->
<!--                android:textColor="#b5d5a7"-->
<!--                android:textSize="13dp"-->

<!--                android:layout_marginStart="20dp">-->

<!--            </TextView>-->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>