<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:Context = ".Home"
    android:fitsSystemWindows="true"
    android:id="@+id/ProfileParent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bground"
        android:backgroundTint="@color/white"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ac_shop"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/border_one"
                android:backgroundTint="#f5f5f5"
                android:elevation="2dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_borders"
                    android:backgroundTint="#4c9a2a"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/service_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/service_txt_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#4c9a2a"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/eye_icon1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/eye_icon"/>

                        <TextView
                            android:id="@+id/service_txt_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="867 view"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:textColor="#b5d5a7"
                            android:textSize="13dp">

                        </TextView>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>










    </RelativeLayout>





</LinearLayout>




