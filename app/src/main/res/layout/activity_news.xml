<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:Context = ".Home"
    android:fitsSystemWindows="true"
    android:id="@+id/ProfileParent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/brandAndItsLocation"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginEnd="0dp"

            android:background="@drawable/profile_empty"
            android:backgroundTint="#4C9A2A"


            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/news_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="45dp"
                    android:text="News"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/searching1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/bg"
                        android:hint="Search"
                        android:paddingStart="20dp"
                        android:textSize="15dp">

                    </EditText>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_baseline_search_24">

                        </ImageView>


                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bground"
            android:backgroundTint="#4C9A2A"
            android:layout_below="@+id/brandAndItsLocation">



            <LinearLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/mpty">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">




                    <com.google.android.material.appbar.AppBarLayout
                        android:id="@+id/app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fragment_layout"

                        >

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabb_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:tabMaxWidth="0dp"
                            app:tabBackground="@color/white"
                            app:tabGravity="fill"
                            app:tabIndicatorColor="#4C9A2A"
                            app:tabMode="scrollable"
                            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                            app:tabTextColor="#4C9A2A" />

                    </com.google.android.material.appbar.AppBarLayout>


                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewpager_news"
                            android:layout_width="match_parent"
                            android:layout_height="950dp"
                            android:layout_below="@+id/app"
                            app:layout_anchorGravity="center"
                            android:layout_above="@+id/bottomNavigationView_news"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                            <FrameLayout
                                android:id="@+id/fragment_news"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="MissingConstraints">


                            </FrameLayout>


                        </androidx.viewpager.widget.ViewPager>

                        <com.google.android.material.bottomnavigation.BottomNavigationView
                            android:id="@+id/bottomNavigationView_news"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:background="#4c9a2a"
                            app:itemIconTint="@color/white"
                            app:itemTextColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="parent"
                            app:menu="@menu/bottom_nav" />

                    </RelativeLayout>


                </LinearLayout>



            </LinearLayout>




        </RelativeLayout>
    </RelativeLayout>









</RelativeLayout>




